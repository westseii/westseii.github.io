@import "./styl/*";

html
  box-sizing: border-box;
  height: 100%;
  font-size: 10px;

*, *::before, *::after
  box-sizing: inherit;

body
  height: inherit;
  background: weiWhite;
  font-size: 1.4rem;
  font-family: "Open Sans", sans-serif;

header
  display: flex;
  align-items: center;
  padding: 0 200px 0 400px;
  height: 40px;
  background: hawkeyeGold;

  & > *:nth-child(2)
    margin-left: auto;

  & > *:nth-child(n + 3)
    margin-left: 20px;

main
  display: flex;
  padding: 0 0 0 400px;
  min-height: calc(100% - 40px);
  border-top: solid 4px weiAccent;

nav
  display: flex;
  flex-direction: column;
  padding: 20px 20px 20px 0;
  min-width: 200px;
  max-width: 200px;

.page-content
  padding: 20px 0 20px 0;
  min-width: calc(100% - 500px);
  max-width: calc(100% - 500px);

.page-notif
  padding: 20px 0 20px 20px;
  min-width: 300px;
  max-width: 300px;

footer
  display: flex;
  justify-content: center;
  padding: 40px 200px 40px 200px;
  border-top: solid 4px weiAccent;
  text-align: center;

hr.projhr, span.header-vdiv::before
  color: weiAccent;
  content: "|";

.dev
  position: fixed;
  top: 64px;
  left: 20px;
  z-index: 1;
  padding: 10px;
  width: 360px;
  border: solid 4px weiAccent;
  border-radius: 20px;
  background: weiWhite;

.dev-tool-item
  display: flex;
  padding: 4px;
  line-height: 0;

  &:nth-child(2n + 1)
    background: weiAccent;

  & > *:last-child
    margin-left: auto;

