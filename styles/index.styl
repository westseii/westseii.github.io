@import "./styl/*";

html
  box-sizing: border-box;
  height: 100%;
  font-size: 10px;
  line-height: 1.8rem;

*, *::before, *::after
  box-sizing: inherit;

body
  height: inherit;
  background: weiWhite;
  color: weiDark;
  font-size: 1.4rem;
  font-family: "Open Sans", sans-serif;

type--headings(normal, 1.6rem);

.header
  position: fixed;
  z-index: 1;
  display: flex;
  align-items: center;
  padding: 0 0 0 400px;
  width: 100%;
  height: 40px;
  background: weiDark;
  color: weiWhite;

.header-div
  min-width: calc(100% - 300px);
  max-width: calc(100% - 300px);

.header--title
  // top positional adjustment for Kalam font
  position: relative;
  top: 2px;
  padding-left: 10px;
  font-weight: bold;
  font-size: 2.4rem;
  font-family: "Kalam", cursive;

.header-div2
  margin-left: auto;
  padding-left: 20px;
  min-width: 300px;
  max-width: 300px;

.header--greet-user
  padding-left: 10px;

.main
  display: flex;
  padding: 40px 0 0 400px;
  min-height: 100%;

.main--nav
  display: flex;
  flex-direction: column;
  padding: 20px 20px 20px 0;
  min-width: 200px;
  max-width: 200px;

.main--content
  padding: 20px 0 20px 0;
  min-width: calc(100% - 500px);
  max-width: calc(100% - 500px);

.main--notify
  padding: 20px 0 20px 20px;
  min-width: 300px;
  max-width: 300px;

.footer
  display: flex;
  justify-content: center;
  padding: 40px 400px 40px 400px;
  text-align: center;

.footer--version
  display: inline-block;
  padding: 20px;
  border-radius: 20px;
  background: weiDark;
  color: weiWhite;
  line-height: 0;

.btn-basic
  position: relative;
  padding: 20px;
  border: none;
  border-radius: 20px;
  background: weiAccent;
  color: weiDark;
  line-height: 0;
  cursor: pointer;
  transition: 0.1s;

  &:hover
    background: weiAccent2;

  &:active
    top: 1px;

  &:disabled
    top: 0;
    background: weiAccent;
    color: weiAccent3;
    cursor: not-allowed;

  &:focus
    background: weiFocus;
    color: weiWhite;

.btn-show-toybox
  position: fixed;
  top: 60px;
  left: 20px;

  &:active
    top: 61px;

.display-none
  display: none;

.nav-basic
  &:link
    padding: 20px 10px;
    background: weiAccent;
    color: weiDark;
    text-decoration: none;
    line-height: 0;
    transition: 0.1s;

  &:visited
    color: weiDark;

  &:hover
    background: weiAccent2;

  &:active
    background: weiAccent3;

  &:first-child
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;

  &:nth-child(n+2)
    margin-top: 2px;

  &:last-child
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;

.nav-basic--sel
  border-right: solid 10px hawkeyeGold;

.para
  text-indent: 20px;

.v-div::before
  color: weiWhite;
  content: "|";

