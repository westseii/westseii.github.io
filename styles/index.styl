@import "./styl/*";

html
  box-sizing: border-box;
  height: 100%;
  font-size: 10px;
  line-height: 1.8rem;

*, *::before, *::after
  box-sizing: inherit;

body
  height: inherit;
  background: weiWhite;
  color: weiDark;
  font-size: 1.4rem;
  font-family: "Open Sans", sans-serif;

type--headings(bold, 1.6rem);

.header
  position: fixed;
  display: flex;
  align-items: center;
  padding: 0 0 0 400px;
  width: 100%;
  height: 40px;
  background: weiDark;
  color: weiWhite;
  mixin--box-shadow(2px, 0.1);

.header-div
  min-width: calc(100% - 300px);
  max-width: calc(100% - 300px);

.header-div2
  margin-left: auto;
  padding-left: 20px;
  width: 300px;

.header--greet-user
  display: inline-block;
  padding: 14px 8px;
  border: solid 2px weiDarkAccent;
  border-radius: 10px;
  color: weiWhite;
  line-height: 0;

.main
  display: flex;
  padding: 40px 0 0 400px;
  min-height: 100%;

.main--nav
  display: flex;
  flex-direction: column;
  padding: 20px 20px 20px 0;
  min-width: 200px;
  max-width: 200px;

.main--content
  padding: 20px 0 20px 0;
  min-width: calc(100% - 500px);
  max-width: calc(100% - 500px);

.main--notify
  padding: 20px 0 20px 20px;
  min-width: 300px;
  max-width: 300px;

.footer
  display: flex;
  justify-content: center;
  padding: 40px 200px 40px 200px;
  text-align: center;

.btn-basic
  position: relative;
  padding: 20px;
  border: none;
  border-radius: 20px;
  background: weiAccent;
  color: weiDark;
  line-height: 0;
  cursor: pointer;
  transition: 0.1s;

  &:hover
    background: weiAccent2;

  &:active
    top: 1px;

  &:disabled
    top: 0;
    background: weiAccent;
    color: weiAccent3;
    cursor: not-allowed;

  &:focus
    background: weiFocus;
    color: weiWhite;

.btn-show-toybox
  position: fixed;
  top: 60px;
  left: 20px;
  mixin--box-shadow(2px, 0.1);

  &:active
    top: 61px;

.display-none
  display: none;

.para
  text-indent: 20px;

.v-div::before
  color: weiWhite;
  content: "|";

