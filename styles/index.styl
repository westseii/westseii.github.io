@import "./styl/*";

html
  box-sizing: border-box;
  height: 100%;
  font-size: 10px;

*, *::before, *::after
  box-sizing: inherit;

body
  height: inherit;
  background: weiWhite;
  font-size: 1.4rem;
  font-family: "Open Sans", sans-serif;

header
  position: fixed;
  display: flex;
  align-items: center;
  padding: 0 200px 0 400px;
  width: 100%;
  height: 40px;
  background: hawkeyeGold;
  mBoxShadow();

  & > *:nth-child(2)
    margin-left: auto;

  & > *:nth-child(n+3)
    margin-left: 20px;

main
  display: flex;
  padding: 40px 0 0 400px;
  min-height: 100%;

nav
  display: flex;
  flex-direction: column;
  padding: 20px 20px 20px 0;
  min-width: 200px;
  max-width: 200px;

.page-content
  padding: 20px 0 20px 0;
  min-width: calc(100% - 500px);
  max-width: calc(100% - 500px);

.page-notif
  padding: 20px 0 20px 20px;
  min-width: 300px;
  max-width: 300px;

footer
  display: flex;
  justify-content: center;
  padding: 40px 200px 40px 200px;
  border-top: solid 4px weiAccent;
  text-align: center;

hr.page-hr
  margin: 2px 0;
  height: 2px;
  border: none;
  background: weiAccent;

span.header-vdiv::before
  color: weiAccent;
  content: "|";

button.toy-btn
  position: relative;
  padding: 0 20px;
  border: none;
  border-radius: 4px;
  background: weiAccent2;

  &:active
    top: 1px;
    color: weiWhite;

  &:disabled
    top: 0;
    color: weiWhite;

