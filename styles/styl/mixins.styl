// m - mixin
mBoxShadow(px = 4px, a = 0.2)
  box-shadow: 0 px px * 3 rgba(85, 85, 85, a);

// t - tag
tHeadings(weight, size)
  h1, h2, h3, h4, h5, h6
    font-weight: weight;
    font-size: size;

// ca - class attribute
caTestColors()
  .bg-tc1
    background: tc1;

  .bg-tc2
    background: tc2;

  .bg-tc3
    background: tc3;

  .bg-tc4
    background: tc4;

caToys()
  .toys
    position: fixed;
    top: 60px;
    left: 20px;
    padding: 0 20px 20px 20px;
    width: 360px;
    border-radius: 8px;
    background: weiWhite;
    mBoxShadow(2px, 0.1);

  .toys--display-none
    display: none;

  .toy-ti
    display: flex;
    padding: 8px 8px 8px 20px;
    line-height: 0;

    &:nth-child(n+2)
      color: weiAccent2;

    &:nth-child(2n)
      padding: 6px 6px 6px 18px;
      border: solid 2px weiAccent;
      border-radius: 8px;

    & > *:last-child
      margin-left: auto;

  button.toy-btn
    position: relative;
    padding: 0 20px;
    border: none;
    border-radius: 4px;
    background: weiAccent2;

  button.toy-btn-active
    &:hover
      cursor: pointer;

    &:active
      top: 1px;
      color: weiWhite;

  button.toy-btn-inactive
    &:hover
      cursor: not-allowed;
