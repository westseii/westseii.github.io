caToybox()
  .toybox
    position: fixed;
    top: 60px;
    left: 20px;
    padding: 0 20px 20px 20px;
    width: 360px;
    border-top: solid 4px hawkeyeGold;
    border-radius: 8px;
    background: weiWhite;
    mBoxShadow(2px, 0.1);

  .toybox--display-none
    display: none;

  .toy
    display: flex;
    padding: 8px;
    line-height: 0;

    &:nth-child(n+2)
      color: weiAccent2;

    &:nth-child(2n)
      padding: 6px;
      border: solid 2px weiAccent;
      border-radius: 8px;

    & > *:last-child
      margin-left: auto;
